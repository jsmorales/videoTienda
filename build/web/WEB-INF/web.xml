<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>homepage</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>peliculaController</servlet-name>
        <servlet-class>videoTienda.controller.peliculaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>imagenController</servlet-name>
        <servlet-class>videoTienda.controller.imagenController</servlet-class>
        <multipart-config>
            <location>/tmp</location>
            <!-- Tamanio maximo del archivo a subir-->
            <max-file-size>3145728</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>homeController</servlet-name>
        <servlet-class>videoTienda.controller.homeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>peliculaController</servlet-name>
        <url-pattern>/pelicula</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>imagenController</servlet-name>
        <url-pattern>/imagen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homeController</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
